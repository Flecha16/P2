@using Microsoft.AspNetCore.Identity
@model AuthSystem.Models.Player

@{
    ViewData["Title"] = "Delete Player";
}

<title>@ViewData["Title"] - Sports Analytics</title>

<h1 class="mb-4 text-center" style="color: white; font-weight: bold">@ViewData["Title"]</h1>

<div class="row justify-content-center mt-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body" style="background-color: #108CC6;">
                <form method="post" class="card p-4" style="background-color: #108CC6; color: #fff;" asp-action="Delete" asp-route-id="@Model.Id">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Id" class="form-label fw-bold">ID</label>
                        <input asp-for="Id" class="form-control" readonly />
                    </div>
                    <div class="form-group row mb-3">
                        <div class="col">
                            <label asp-for="FirstName" class="form-label fw-bold text-white">First Name</label>
                            <input asp-for="FirstName" class="form-control" readonly />
                        </div>
                        <div class="col">
                            <label asp-for="LastName" class="form-label fw-bold text-white">Last Name</label>
                            <input asp-for="LastName" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="DateOfBirth" class="form-label fw-bold text-white">Date Of Birth</label>
                        <input asp-for="DateOfBirth" class="form-control" readonly />
                    </div>
                    <div class="form-group row mb-3">
                        <div class="col">
                            <label asp-for="Nationality" class="form-label fw-bold text-white">Nationality</label>
                            <input asp-for="Nationality" class="form-control" readonly />
                        </div>
                        <div class="col">
                            <label asp-for="Position" class="form-label fw-bold text-white">Position</label>
                            <input asp-for="Position" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Valoration" class="form-label fw-bold text-white">Valoration</label>
                        <input asp-for="Valoration" class="form-control" readonly />
                    </div>
                    <div class="form-group row mb-3">
                        <div class="col">
                            <label asp-for="TeamId" class="form-label fw-bold text-white">Team Name</label>
                            <input asp-for="Team.Name" class="form-control" readonly />
                        </div>
                        <div class="col">
                            <label asp-for="LeagueId" class="form-label fw-bold text-white">League Name</label>
                            <input asp-for="League.Name" class="form-control" aria-required="true" readonly />
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mt-2">
                        <button type="submit" class="btn btn-danger btn-lg me-4">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
