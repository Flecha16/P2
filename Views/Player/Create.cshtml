@using Microsoft.AspNetCore.Identity
@model AuthSystem.Models.Player

@{
    ViewData["Title"] = "Create Player";
}

<title>@ViewData["Title"] - Sports Analytics</title>

<h1 class="mb-4 text-center" style="color: white; font-weight: bold">@ViewData["Title"]</h1>

<div class="row justify-content-center mt-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body" style="background-color: #108CC6;">
                <form method="post" class="card p-4" style="background-color: #108CC6; color: #fff;">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row mb-3">
                        <div class="col">
                            <label asp-for="FirstName" class="form-label fw-bold text-white">First Name</label>
                            <input asp-for="FirstName" class="form-control" aria-required="true" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="LastName" class="form-label fw-bold text-white">Last Name</label>
                            <input asp-for="LastName" class="form-control" aria-required="true" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="DateOfBirth" class="form-label fw-bold text-white">Date of Birth</label>
                        <input type="date" asp-for="DateOfBirth" class="form-control" aria-required="true" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Nationality" class="form-label fw-bold text-white">Nationality</label>
                        <select asp-for="Nationality" class="form-control" aria-required="true">
                            <option value="">-- Select Nationality --</option>
                            @foreach (var nationality in Enum.GetValues(typeof(Nationality)))
                            {
                                <option value="@nationality">@nationality</option>
                            }
                        </select>
                        <span asp-validation-for="Nationality" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Position" class="form-label fw-bold text-white">Position</label>
                        <select asp-for="Position" class="form-control" aria-required="true">
                            <option value="">-- Select Position --</option>
                            @foreach (var position in Enum.GetValues(typeof(Position)))
                            {
                                <option value="@position">@position</option>
                            }
                        </select>
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Valoration" class="form-label fw-bold text-white">Valoration</label>
                        <input asp-for="Valoration" class="form-control" aria-required="true" />
                        <span asp-validation-for="Valoration" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="TeamId" class="form-label fw-bold text-white">Team</label>
                        <select asp-for="TeamId" class="form-control" aria-required="true" asp-items="ViewBag.TeamId">
                            <option value="">-- Select Team --</option>
                        </select>
                        <span asp-validation-for="TeamId" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center mt-2">
                        <button type="submit" class="btn btn-primary btn-lg me-4">Create</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>