@using Microsoft.AspNetCore.Identity
@model AuthSystem.Areas.Identity.Data.ApplicationUser

@inject UserManager<AuthSystem.Areas.Identity.Data.ApplicationUser> userManager
@inject RoleManager<IdentityRole> roleManager

@{
    ViewData["Title"] = "Create Users";
}

<title>@ViewData["Title"] - Frish Alimentos Congelados</title>

<h2 class="text-center mb-4">Create Users</h2>

<div class="row justify-content-center mt-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body" style="background-color: #008c90;">
                <form method="post" class="card p-4" style="background-color: #008c90; color: #fff;">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label for="FirstName" class="form-label fw-bold text-white">First Name</label>
                        <input asp-for="FirstName" class="form-control" aria-required="true" />
                    </div>

                    <div class="form-group mb-3">
                        <label for="LastName" class="form-label fw-bold text-white">Last Name</label>
                        <input asp-for="LastName" class="form-control" aria-required="true" />
                    </div>

                    <div class="form-group mb-3">
                        <label for="Email" class="form-label fw-bold text-white">Email</label>
                        <input asp-for="Email" class="form-control" aria-required="true" />
                    </div>

                    <div class="form-group mb-3">
                        <label for="PasswordHash" class="form-label fw-bold text-white">Password</label>
                        <input asp-for="PasswordHash" class="form-control" aria-required="true" />
                    </div>

                    <div class="form-group mb-3">
                        <label for="RoleName" class="form-label fw-bold text-white">User Role</label>
                        <select id="RoleName" name="roleName" class="form-control" aria-required="true">
                            <option value="">Select a role</option>
                            @foreach (var role in ViewBag.Roles)
                            {
                                <option value="@role.Name">@role.Name</option>
                            }
                        </select>
                    </div>

                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}