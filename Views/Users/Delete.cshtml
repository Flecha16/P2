@using Microsoft.AspNetCore.Identity
@model AuthSystem.Areas.Identity.Data.ApplicationUser

@inject UserManager<AuthSystem.Areas.Identity.Data.ApplicationUser> userManager
@inject RoleManager<IdentityRole> roleManager

@{
    ViewData["Title"] = "Delete Users";
}

<title>@ViewData["Title"] - Frish Alimentos Congelados</title>

<h2 class="text-center mb-4">Delete Users</h2>

<div class="row justify-content-center mt-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body" style="background-color: #008c90;">

                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="card p-4" style="background-color: #008c90; color: #fff;">

                    <div class="form-group mb-3">
                        <label asp-for="Id" class="form-label fw-bold">ID</label>
                        <input asp-for="Id" class="form-control" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FirstName" class="form-label fw-bold">First Name</label>
                        <input asp-for="FirstName" class="form-control" readonly />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="LastName" class="form-label fw-bold">Last Name</label>
                        <input asp-for="LastName" class="form-control" readonly />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label fw-bold">Email</label>
                        <input asp-for="Email" class="form-control" readonly />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">User Role</label>
                        <input type="text" class="form-control" readonly value="@userManager.GetRolesAsync(Model).Result.FirstOrDefault()" />
                    </div>

                    <div class="d-flex justify-content-center mt-2">
                        <input type="submit" value="Delete" class="btn btn-danger btn-lg me-4" />
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
