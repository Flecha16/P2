@using Microsoft.AspNetCore.Identity
@model AuthSystem.Models.Statistic

@{
    ViewData["Title"] = "Edit Statistics";
}

<title>@ViewData["Title"] - Sports Analytics</title>

<h1 class="mb-4 text-center" style="color: white; font-weight: bold">@ViewData["Title"]</h1>

<div class="row justify-content-center mt-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body" style="background-color: #108CC6;">
                <form method="post" class="card p-4" style="background-color: #108CC6; color: #fff;" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="PlayerId" class="form-label fw-bold text-white">Player</label>
                        <input class="form-control" value="@($"{Model.Player?.FirstName} {Model.Player?.LastName}")" readonly />
                    </div>
                    <div class="form-group row mb-3">
                        <div class="col">
                            <label asp-for="Matches" class="form-label fw-bold text-white">Matches (@Model.Matches)</label>
                            <input asp-for="Matches" class="form-control" aria-required="true" value="1" />
                            <span asp-validation-for="Matches" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Minutes" class="form-label fw-bold text-white">Minutes (@Model.Minutes)</label>
                            <input asp-for="Minutes" class="form-control" aria-required="true" value="90" />
                            <span asp-validation-for="Minutes" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <div class="col">
                            @{
                                string goalsLabel = Model.Player?.Position == Position.GK ? $"Goals Received ({Model.Goals})" : $"Goals ({Model.Goals})";
                            }
                            <label asp-for="Goals" class="form-label fw-bold text-white">@goalsLabel</label>
                            <input asp-for="Goals" class="form-control" aria-required="true" value="0"/>
                            <span asp-validation-for="Goals" class="text-danger"></span>
                        </div>
                        <div class="col">
                            
                            @{
                                string assistsLabel = Model.Player?.Position == Position.GK ? $"Clean Sheet ({Model.Assists})" : $"Assists ({Model.Assists})";
                            }
                            <label asp-for="Assists" class="form-label fw-bold text-white">@assistsLabel</label>
                            <input asp-for="Assists" class="form-control" aria-required="true" value="0"/>
                            <span asp-validation-for="Assists" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <div class="col">
                            <label asp-for="YellowCards" class="form-label fw-bold text-white">Yellow Cards (@Model.YellowCards)</label>
                            <input asp-for="YellowCards" class="form-control" aria-required="true" value="0" />
                            <span asp-validation-for="YellowCards" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="RedCards" class="form-label fw-bold text-white">Red Cards (@Model.RedCards)</label>
                            <input asp-for="RedCards" class="form-control" aria-required="true" value="0" />
                            <span asp-validation-for="RedCards" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <div class="col">
                            @{
                                string speedLabel = Model.Player?.Position == Position.GK ? $"Shots Received ({Model.AverageSpeed})" : $"Average Speed ({Model.AverageSpeed.ToString("0.00")} km/h)";
                            }
                            <label asp-for="AverageSpeed" class="form-label fw-bold text-white">@speedLabel</label>
                            <input asp-for="AverageSpeed" class="form-control" aria-required="true" value="0" />
                            <span asp-validation-for="AverageSpeed" class="text-danger"></span>
                        </div>
                        <div class="col">
                            @{
                                string kmLabel = Model.Player?.Position == Position.GK ? $"Passes ({Model.Km})" : $"Total Km ({Model.Km.ToString("0.00")} km)";
                            }
                            <label asp-for="Km" class="form-label fw-bold text-white">@kmLabel</label>
                            <input asp-for="Km" class="form-control" aria-required="true" value="0" />
                            <span asp-validation-for="Km" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mt-2">
                        <button type="submit" class="btn btn-primary btn-lg me-4">Save</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
