@using Microsoft.AspNetCore.Identity
@model AuthSystem.Models.Statistic

@{
    ViewData["Title"] = "Add Statistics";
}

<title>@ViewData["Title"] - Sports Analytics</title>

<h1 class="mb-4 text-center" style="color: white; font-weight: bold">@ViewData["Title"]</h1>

<div class="row justify-content-center mt-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body" style="background-color: #108CC6;">
                <form method="post" class="card p-4" style="background-color: #108CC6; color: #fff;">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="PlayerId" class="form-label fw-bold text-white">Player</label>
                        <select asp-for="PlayerId" class="form-control" aria-required="true" asp-items="ViewBag.Players">
                            <option value="">-- Select Player --</option>
                        </select>
                        <span asp-validation-for="PlayerId" class="text-danger"></span>
                    </div>

                    <div class="form-group row mb-3">
                        <div class="col">
                            <label asp-for="Matches" class="form-label fw-bold text-white">Matches</label>
                            <input asp-for="Matches" class="form-control" aria-required="true" value="1"/>
                            <span asp-validation-for="Matches" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Minutes" class="form-label fw-bold text-white">Minutes</label>
                            <input asp-for="Minutes" class="form-control" aria-required="true" value="90"/>
                            <span asp-validation-for="Minutes" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="form-group row mb-3">
                        <div class="col">
                            <label asp-for="Goals" class="form-label fw-bold text-white">Goals / Goals Received</label>
                            <input asp-for="Goals" class="form-control" aria-required="true" />
                            <span asp-validation-for="Goals" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Assists" class="form-label fw-bold text-white">Assists / Clean Sheets</label>
                            <input asp-for="Assists" class="form-control" aria-required="true" />
                            <span asp-validation-for="Assists" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <div class="col">
                            <label asp-for="YellowCards" class="form-label fw-bold text-white">Yellow Cards</label>
                            <input asp-for="YellowCards" class="form-control" aria-required="true" />
                            <span asp-validation-for="YellowCards" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="RedCards" class="form-label fw-bold text-white">Red Cards</label>
                            <input asp-for="RedCards" class="form-control" aria-required="true" />
                            <span asp-validation-for="RedCards" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <div class="col">
                            <label asp-for="AverageSpeed" class="form-label fw-bold text-white">Average Speed / Shots Received</label>
                            <input asp-for="AverageSpeed" class="form-control" aria-required="true" />
                            <span asp-validation-for="AverageSpeed" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Km" class="form-label fw-bold text-white">Total Km / Passes</label>
                            <input asp-for="Km" class="form-control" aria-required="true" />
                            <span asp-validation-for="Km" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mt-2">
                        <button type="submit" class="btn btn-primary btn-lg me-4">Save</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
