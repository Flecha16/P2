@model AuthSystem.Models.Statistic

@{
    ViewData["Title"] = "Delete Statistics";
}

<h1 class="mb-4 text-center" style="color: white; font-weight: bold">@ViewData["Title"]</h1>

<div class="row justify-content-center mt-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body" style="background-color: #108CC6;">
                <form method="post" class="card p-4" style="background-color: #108CC6; color: #fff;" asp-action="Delete">
                    <div class="form-group mb-3">
                        <label asp-for="PlayerId" class="form-label fw-bold text-white">Player</label>
                        <input class="form-control" value="@($"{Model.Player?.FirstName} {Model.Player?.LastName}")" readonly />
                    </div>

                    <div class="form-group row mb-3">
                        <div class="col">
                            <label asp-for="Matches" class="form-label fw-bold text-white">Matches</label>
                            <input asp-for="Matches" class="form-control" readonly />
                        </div>
                        <div class="col">
                            <label asp-for="Minutes" class="form-label fw-bold text-white">Minutes</label>
                            <input asp-for="Minutes" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <div class="col">
                            <label asp-for="Goals" class="form-label fw-bold text-white">Goals</label>
                            <input asp-for="Goals" class="form-control" readonly />
                        </div>
                        <div class="col">
                            <label asp-for="Assists" class="form-label fw-bold text-white">Assists</label>
                            <input asp-for="Assists" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <div class="col">
                            <label asp-for="YellowCards" class="form-label fw-bold text-white">Yellow Cards</label>
                            <input asp-for="YellowCards" class="form-control" readonly />
                        </div>
                        <div class="col">
                            <label asp-for="RedCards" class="form-label fw-bold text-white">Red Cards</label>
                            <input asp-for="RedCards" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <div class="col">
                            <label asp-for="AverageSpeed" class="form-label fw-bold text-white">Average Speed</label>
                            <input asp-for="AverageSpeed" class="form-control" readonly />
                        </div>
                        <div class="col">
                            <label asp-for="Km" class="form-label fw-bold text-white">Total Km</label>
                            <input asp-for="Km" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mt-2">
                        <button type="submit" class="btn btn-danger btn-lg me-4">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
