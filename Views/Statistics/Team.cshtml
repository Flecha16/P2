@using Microsoft.AspNetCore.Identity
@model IEnumerable<AuthSystem.Models.Player>

@{
    ViewData["Title"] = "Best Team";
}

<title>@ViewData["Title"] - Sports Analytics</title>

<div class="container">
    <h1 class="mb-4 text-center" style="color: white; font-weight: bold">@ViewData["Title"]</h1>

    @if (Model != null)
    {
        <table class="table table-striped table-bordered">
            <thead style="background-color: #108CC6; color: #fff;">
                <tr>
                    <th class="text-center" style="width: auto;">ID</th>
                    <th class="text-center" style="width: auto;">Position</th>
                    <th class="text-center" style="width: auto;">Player Name</th>
                    <th class="text-center" style="width: auto;">Valoration</th>
                </tr>
            </thead>
            <tbody style="background-color: white;">
                @foreach (var player in Model)
                {
                    <tr>
                        <td class="text-center">@player.Id</td>
                        <td class="text-center">@player.Position</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => player.FirstName) @Html.DisplayFor(modelItem => player.LastName)</td>
                        <td class="text-center">@player.Valoration</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center">No players found for the best team.</p>
    }
</div>

<div class="d-flex justify-content-center mt-2">
    <a asp-action="Index" class="btn btn-primary btn-lg">Return</a>
</div>
