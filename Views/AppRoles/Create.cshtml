@using Microsoft.AspNetCore.Identity
@model IdentityRole

@{
    ViewData["Title"] = "Create Roles";
}

<title>@ViewData["Title"] - Frish Alimentos Congelados</title>

<h2 class="text-center mb-4">Create Roles</h2>

<div class="row justify-content-center mt-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body" style="background-color: #008c90;">
                <form method="post" class="card p-4" style="background-color: #008c90; color: #fff;">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label for="Name" class="form-label fw-bold text-white">Role Name</label>
                        <input asp-for="Name" class="form-control" aria-required="true" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
