@using Microsoft.AspNetCore.Identity
@model IdentityRole

@{
    ViewData["Title"] = "Delete Roles";
}

<title>@ViewData["Title"] - Frish Alimentos Congelados</title>

<h2 class="text-center mb-4">Delete Role</h2>

<div class="row justify-content-center mt-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body" style="background-color: #008c90;">

                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="card p-4" style="background-color: #008c90; color: #fff;">

                    <div class="form-group mb-3">
                        <label asp-for="Id" class="form-label fw-bold">ID</label>
                        <input asp-for="Id" class="form-control" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Name</label>
                        <input asp-for="Name" class="form-control" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center mt-2">
                        <input type="submit" value="Delete" class="btn btn-danger btn-lg me-4" />
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
