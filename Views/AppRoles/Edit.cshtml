@using Microsoft.AspNetCore.Identity
@model IdentityRole

@{
    ViewData["Title"] = "Edit Role";
}

<title>@ViewData["Title"] - Frish Alimentos Congelados</title>

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<div class="row justify-content-center mt-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body" style="background-color: #008c90;">
                <form method="post" asp-route-id="@Model.Id" method="post" class="card p-4" style="background-color: #008c90; color: #fff;">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Id" class="form-label fw-bold">ID</label>
                        <input asp-for="Id" class="form-control" readonly />
                    </div>

                    <div class="form-group mb-3">
                        <label for="Name" class="form-label fw-bold text-white">Role Name</label>
                        <input asp-for="Name" class="form-control" aria-required="true" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center mt-2">
                        <button type="submit" class="btn btn-primary btn-lg me-4">Save</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
